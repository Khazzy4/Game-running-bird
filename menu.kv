<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    
    
    Label:
        font_size: dp(55)
        font_name: 'Helvetica'
        text: root.parent.menu_title
        pos_hint: {"center_x": .5, "center_y": .6}
    Button:
        font_size: dp(16)
        font_name: 'Helvetica'
        text: root.parent.menu_button_title 
        pos_hint: {"center_x": .5, "center_y": .3}
        size_hint: .2, .1
        on_press: root.parent.on_menu_button_pressed()
        background_normal: ''
        background_color: 'goldenrod'
